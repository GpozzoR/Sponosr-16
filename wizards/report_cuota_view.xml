<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
        <!-- spo.report.cuota form view -->
        <record id="spo_report_cuota_view_form" model="ir.ui.view">
            <field name="name">spo.report.cuota.view.form</field>
            <field name="model">spo.report.cuota</field>
            <field name="arch" type="xml">
                <form string="Reporte de Cuota">
                    <sheet>
                        <group>
                            <group name="group_name" string="Cuota">
                                <field name="cuota_id"/>
                            </group>
                        </group>
                        <footer>
                            <button name="print_cuota_report" string="Generear Reporte de Cuota" type="object" class="btn-primary"/>
                            <button string="Cancelar" class="btn-default" special="cancel"/>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>
    
    </data>
    

</odoo>
